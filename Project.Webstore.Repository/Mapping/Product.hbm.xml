<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping 
  xmlns="urn:nhibernate-mapping-2.2" 
  namespace="Project.Webstore.Model.Product" 
  assembly="Project.Webstore.Model">

  <class name="Product" table="Products" lazy="false">
    <id name="Id" column="Id" type="int" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property name="CreatedOn">
      <column name="CreatedOn" sql-type="DATETIME2(7)" not-null="true" />
    </property>
    <property name="ModifiedOn">
      <column name="ModifiedOn" sql-type="DATETIME2(7)" not-null="false" />
    </property>
    <property name="Status">
      <column name="Status" sql-type="tinyint" not-null="true" />
    </property>
    <many-to-one name="Size" class="Project.Webstore.Model.ProductAttributes.ProductSize" column="SizeId" not-null="true" />
    <many-to-one name="Title" class="ProductTitle" column="ProductTitleId" not-null="true" lazy="false" />
  </class>
  
</hibernate-mapping>
