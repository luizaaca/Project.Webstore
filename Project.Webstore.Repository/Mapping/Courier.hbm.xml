<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
  xmlns="urn:nhibernate-mapping-2.2"
  namespace="Project.Webstore.Model.Shipping"
  assembly="Project.Webstore.Model">

  <class name="Courier" table="Couriers" lazy="false">

    <id name="Id" column="Id" type="int" unsaved-value="0">
      <generator class="native" />
    </id>

    <property name="Name" access="field.camelcase-underscore">
      <column name="Name" sql-type="nvarchar(50)" not-null="true" />
    </property>
    
  </class>  
</hibernate-mapping>
